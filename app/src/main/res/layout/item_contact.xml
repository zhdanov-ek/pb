<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/item_list_padding"
    android:orientation="horizontal"
    android:background="@drawable/bg_item">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/ava_list_size"
            android:layout_height="@dimen/ava_list_size"
            android:layout_margin="@dimen/item_list_photo_margin"
            tools:background="@drawable/person_default"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                tools:text="@string/hint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/tvPosition"
                tools:text="@string/hint_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_small" />

        </LinearLayout>
</LinearLayout>
