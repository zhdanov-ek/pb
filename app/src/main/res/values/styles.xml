<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="icon_simple">
        <item name="android:layout_marginRight">@dimen/activity_padding</item>
        <item name="android:layout_width">@dimen/icon_simple_size</item>
        <item name="android:layout_height">@dimen/icon_simple_size</item>
    </style>

    <style name="ButtonBlue" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

</resources>
